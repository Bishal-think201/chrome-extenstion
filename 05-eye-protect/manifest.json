{
  "manifest_version": 3,
  "name": "Clock",
  "version": "1.0",
  "description": "New Tab Displays a clock",
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "action": {
    "default_icon": {
      "16": "images/icon-16.png",
      "32": "images/icon-32.png",
      "48": "images/icon-48.png",
      "128": "images/icon-128.png"
    }
  },
  "permissions": ["tabs"],
  "chrome_url_overrides": {
    "newtab": "popup/popup.html"
  }
}
